<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juegocolaborativo.activity.ResultadosActivity$PlaceholderFragment">

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/titulo_activity_resultados"
        android:id="@+id/titulo"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        style="@style/tituloActivity"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/titulo_resultados_subgrupo"
        android:layout_below="@+id/listView"
        android:id="@+id/tituloSubgrupo"
        android:layout_marginTop="10dp"
        style="@style/tituloActivity"/>

    <ListView
        android:id="@+id/listViewSugbrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloSubgrupo" />
</RelativeLayout>
